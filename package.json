{
  "name": "@vuestorefront/engineering-toolkit",
  "version": "0.0.1",
  "private": true,
  "repository": "git@github.com:vuestorefront/engineering-toolkit.git",
  "author": "Maciej Rybaniec <mrybaniec@vuestorefront.io>",
  "license": "MIT",
  "scripts": {
    "prepare": "npx husky install",
    "commit": "npx cz"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
